---
const links = [
  {
    href: "/",
    text: "Listado",
  },
  {
    href: "/pokemons/1/",
    text: "Paginado",
  },
  {
    href: "/favorites/",
    text: "Favoritos",
  },
  {
    href: "/island/",
    text: "islas",
  },
];

const pathname = Astro.url.pathname;


---

<nav class="shadow dark:bg-gray-800">
  <div
    class="container flex flex-row gap-4 items-center justify-center p-6 mx-auto text-gray-600"
  >
    {
      links.map((item) => (
        <div>
          <a class="text-gray-100 dark:text-gray-200 mx-1.5 mx:mx-6" href={item.href}>
            {item.text}
          </a>
          {pathname === item.href && (
            <div class="border-b-2 border-blue-500 w-full" />
          )}
        </div>
      ))
    }
  </div>
</nav>
